<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_normal_background"
    android:fitsSystemWindows="false">

    <include
        android:id="@+id/app_bar_image_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        layout="@layout/tool_bar_image" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_plant_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_plant_en_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PlantTitleStyle"/>

            <TextView
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="別名"
                style="@style/PlantTitleStyle"/>

            <TextView
                android:id="@+id/tv_plant_also_known"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PlantInfoStyle"/>

            <TextView
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="簡介"
                style="@style/PlantTitleStyle"/>

            <TextView
                android:id="@+id/tv_plant_brief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PlantInfoStyle"/>

            <TextView
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="辨認方式"
                style="@style/PlantTitleStyle"/>

            <TextView
                android:id="@+id/tv_plant_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PlantInfoStyle"/>

            <TextView
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="功能性"
                style="@style/PlantTitleStyle"/>

            <TextView
                android:id="@+id/tv_plant_application"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PlantInfoStyle"/>

            <TextView
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最後更新"
                style="@style/PlantTitleStyle"/>

            <TextView
                android:id="@+id/tv_plant_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PlantInfoStyle"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>